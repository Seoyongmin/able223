extends layout

block content
  form(action='/login' method='post')
    div.form-group
      label(for='id') 아이디
      input(type='text' name='id' class='form-control')
    div.form-group
      label(for='pwd') 비밀번호
      input(type='password' name='pwd' class='form-control')
    input(type='submit' class='btn btn-primary')
