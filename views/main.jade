doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,600,400italic,700' rel='stylesheet' type='text/css')
    link(rel='stylesheet' href='/css/animate.css')
    link(rel='stylesheet' href='/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
    link(rel='stylesheet' href='/css/myCss.css')
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/modernizr-2.6.2.min.js')
    script(src='/js/jquery.waypoints.min.js')
    script(src='/js/jquery.stellar.min.js')
    script(src='/js/jquery.magnific-popup.min.js')
    script(src='/js/jquery.style.switcher.js')
    script(src='/js/main.js')
    script(src='/js/myJs.js')

    body
      header(role='banner' id='fh5co-header')
        div.container
          nav.navbar.navbar-default
            div.navbar-header
              a(href='#' class='js-fh5co-nav-toggle fh5co-nav-toggle' aria-expanded='false' aria-controls='navbar')
              a(class='navbar-brand' href='/') SOST
            div(id='navbar' class='navbar-collapse collapse')
              ul.nav.navbar-nav.navbar-right
                li
                  a(href='#' class='external') HTML
                li
                  a(href='#' class='external') SQL
                li
                  a(href='/board/list' class='external') BOARD
                li
                  a(href='#' data-toggle='modal' data-target='#login-modal')
                    span.login LOGIN

      section(id='fh5co-home' data-section='home' style='background-image: url(images/full_image.jpg);' data-stellar-background-ratio='0.5')
        div.gradient
          div.container
            div.text-wrap
              div.text-inner
                div.row
                  div.col-md-8.col-md-offset-2
                    h1.to-animate SOURCE STORAGE
                    h2.to-animate We are united through source sharing
        div.slant

      div(class='modal fade' id='login-modal' tabindex='-1' role='dialog' aria-labelledby='myModalLabel' aria-hidden='true' style='display: none;')
        div.modal-dialog
          div.modal-content
            div(class='modal-header' align='center')
              strong LOGIN
            div(id='div-forms')
              form(id='login-form' action='/login' method='post')
                div.modal-body
                  input(id='id' name='id' class='form-control' type='text' placeholder='ID' required)
                  input(id='pwd' name='pwd' class='form-control' type='password' placeholder='PASSWORD' required)
                div.modal-footer
                  div
                    button(type='submit' class='btn btn-primary btn-lg btn-block') LOGIN
                  div
                    button(id='login_lost_btn' type='button' class='btn btn-link') Lost Password
                    button(id='login_register_btn' type='button' class='btn btn-link') Register
